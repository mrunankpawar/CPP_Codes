#include <iostream>
using namespace std;

class Employee
{
    int id;
    int salary;

public:
    void setID(void)
    {
        salary = 100;
        cout << "Enter ID of the employee" << endl;
        cin >> id;
    }

    void getID(void)
    {
        cout << "The ID of this employee is : " << id << endl;
        cout << salary << endl;
    }
};

int main()
{
    // Employee mrunank, rishi, vedant;
    // mrunank.setID();
    // mrunank.getID();
    Employee fb[4];
    for (int i = 0; i < 4; i++)
    {
        fb[i].setID();
        fb[i].getID();
    }

    return 0;
}
