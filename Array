#include <iostream>
using namespace std;

int main()
{

    int mathMarks[4];

    mathMarks[0] = 67;
    mathMarks[1] = 45;
    mathMarks[2] = 123;
    mathMarks[3] = 65;

    cout << "mathMarks are : " << endl;

    cout << mathMarks[0] << endl;
    cout << mathMarks[1] << endl;
    cout << mathMarks[2] << endl;
    cout << mathMarks[3] << endl;

    int marks[4] = {34, 56, 85, 70};

    cout << "Marks are : " << endl;

    cout << marks[0] << endl;
    cout << marks[1] << endl;
    cout << marks[2] << endl;
    cout << marks[3] << endl;

    //*****Pointer and Arrays*******
    int *p = marks;
    cout << "The value of *p is : " << *p << endl;
    cout << "The value of *p+1 is : " << *(p + 1) << endl;
    cout << "The value of *p+2 is : " << *(p + 2) << endl;
    cout << "The value of *p+3 is : " << *(p + 3) << endl;

    return 0;
}
