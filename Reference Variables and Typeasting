#include<iostream>
using namespace std;

int c = 100;

int main(){

    //**************SCOPE RESOLUTION**********************


    int a, b, c;
    cout<<"Enter first number : ";
    cin>>a;
    cout<<"\nEnter second number : ";
    cin>>b;
    c = a + b;
    cout<<"\nThe sum is : "<<c;
    cout<<"\nThe global c is : "<<::c; //scope resolution operator is used for displaying the global variable



    //**************Float, long and long double literals*********************


    float d = 34.4f;
    long double e = 34.4l;
    
    cout<<"The size of 34.4 is : "<<sizeof(34.4)<<endl;
    cout<<"The size of 34.4f is : "<<sizeof(34.4f)<<endl;
    cout<<"The size of 34.4F is : "<<sizeof(34.4F)<<endl;
    cout<<"The size of 34.4l is : "<<sizeof(34.4l)<<endl;
    cout<<"The size of 34.4L is : "<<sizeof(34.4L)<<endl;
    

    //**********************Reference Variables**************
    // Calling a same person with different names 
    float x = 34;
    float  & y = x;
    cout<<x<<endl;
    cout<<y<<endl;


    //***********************TypeCasting********************
    float a = 45.67;
    cout<<"The value of a before typecasting is : "<<a;
    cout<<"\nThe value of a after typecasting is : "<<int(a);
    return 0;
}
